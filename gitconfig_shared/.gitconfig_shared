[core]
  autocrlf = false
  safecrlf = true
  editor = vim
  pager = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  features = side-by-side line-numbers decorations
  navigate = true
  side-by-side = true
  line-numbers = true
  syntax-theme = gruvbox-dark
  line-numbers-zero-style = 'white'
[merge]
    conflictstyle = diff3
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  type = cat-file -t
  dump = cat-file -p
	stash-unapply = !git stash show -p | git apply -R
[diff]
  ; tool = kitty
  ; guitool = kitty.gui
  colorMoved = default
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE
[pull]
	rebase = false

